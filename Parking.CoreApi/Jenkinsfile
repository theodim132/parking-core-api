pipeline {
  agent any
  environment {
    IMAGE_NAME = "parking-core-api"
    IMAGE_TAG = "latest"
    INFRA_REPO = "https://github.com/theodim132/parking-infra.git"
    INFRA_DIR = "infra"
    GIT_CREDENTIALS_ID = ""
  }
  stages {
    stage('Restore') {
      steps {
        dir('Parking.CoreApi') {
          sh 'dotnet restore'
        }
      }
    }
    stage('Build') {
      steps {
        dir('Parking.CoreApi') {
          sh 'dotnet build -c Release --no-restore'
        }
      }
    }
    stage('Test') {
      steps {
        dir('Parking.CoreApi.Tests') {
          sh 'dotnet test -c Release --logger trx'
        }
      }
    }
    stage('Docker Build') {
      steps {
        dir('Parking.CoreApi') {
          sh 'docker build -t $IMAGE_NAME:$IMAGE_TAG .'
        }
      }
    }
    stage('Ansible K8s Deploy') {
      when {
        expression { return env.K8S_NAMESPACE?.trim() }
      }
      steps {
        dir("$INFRA_DIR") {
          deleteDir()
          checkout([$class: 'GitSCM',
            branches: [[name: '*/master']],
            userRemoteConfigs: [[url: env.INFRA_REPO, credentialsId: '39aaae8f-ea94-4bf7-88a9-1bc9f29b36a6']]
          ])
        }
        sh "ansible-playbook -i $INFRA_DIR/ansible/inventories/dev/hosts.ini -e k8s_namespace=parking $INFRA_DIR/ansible/playbooks/k8s-deploy.yml"
      }
    }
    stage('Docker Push') {
      when {
        expression { return env.REGISTRY?.trim() }
      }
      steps {
        sh 'if [ -n "$REGISTRY_USER" ] && [ -n "$REGISTRY_PASS" ]; then echo "$REGISTRY_PASS" | docker login $REGISTRY -u "$REGISTRY_USER" --password-stdin; fi'
        sh 'docker tag $IMAGE_NAME:$IMAGE_TAG $REGISTRY/$IMAGE_NAME:$IMAGE_TAG'
        sh 'docker push $REGISTRY/$IMAGE_NAME:$IMAGE_TAG'
      }
    }
    stage('Deploy (K8s)') {
      when {
        expression { return env.K8S_NAMESPACE?.trim() }
      }
      steps {
        sh 'kubectl -n $K8S_NAMESPACE rollout restart deployment/core-api'
      }
    }
  }
}
