pipeline {
  agent any
  environment {
    IMAGE_NAME = "parking-core-api"
    IMAGE_TAG = "${env.BUILD_NUMBER ?: 'latest'}"
    REGISTRY = "localhost:32000"
    K8S_NAMESPACE = "parking"
  }
  stages {
    stage('Restore') {
      steps {
        dir('Parking.CoreApi') {
          sh 'dotnet restore'
        }
      }
    }
    stage('Build') {
      steps {
        dir('Parking.CoreApi') {
          sh 'dotnet build -c Release --no-restore'
        }
      }
    }
    stage('Test') {
      steps {
        dir('Parking.CoreApi.Tests') {
          sh 'dotnet test -c Release --logger trx'
        }
      }
    }
    stage('Migrate Database') {
      steps {
        dir('Parking.CoreApi') {
          sh '''
            set -e
            POSTGRES_PASSWORD=$(microk8s kubectl get secret parking-secrets -n $K8S_NAMESPACE -o jsonpath='{.data.POSTGRES_PASSWORD}' | base64 -d)
            microk8s kubectl port-forward -n $K8S_NAMESPACE svc/postgres 5432:5432 >/tmp/pg-port-forward.log 2>&1 &
            PF_PID=$!
            trap "kill $PF_PID" EXIT
            sleep 3
            dotnet tool install --tool-path ./.dotnet-tools dotnet-ef
            ./.dotnet-tools/dotnet-ef database update --connection "Host=127.0.0.1;Port=5432;Database=parking;Username=parking;Password=$POSTGRES_PASSWORD"
          '''
        }
      }
    }
    stage('Docker Build & Push') {
      steps {
        dir('Parking.CoreApi') {
          sh 'docker build -t $IMAGE_NAME:$IMAGE_TAG .'
          sh 'docker tag $IMAGE_NAME:$IMAGE_TAG $REGISTRY/$IMAGE_NAME:$IMAGE_TAG'
          sh 'docker tag $IMAGE_NAME:$IMAGE_TAG $REGISTRY/$IMAGE_NAME:latest'
          sh 'docker push $REGISTRY/$IMAGE_NAME:$IMAGE_TAG'
          sh 'docker push $REGISTRY/$IMAGE_NAME:latest'
        }
      }
    }
    stage('Deploy to Kubernetes') {
      steps {
        sh 'microk8s kubectl set image deployment/core-api core-api=$REGISTRY/$IMAGE_NAME:$IMAGE_TAG -n $K8S_NAMESPACE'
        sh 'microk8s kubectl rollout status deployment/core-api -n $K8S_NAMESPACE --timeout=2m'
      }
    }
  }
}
